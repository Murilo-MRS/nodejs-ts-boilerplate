{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests" , "build/**/*"]
}
